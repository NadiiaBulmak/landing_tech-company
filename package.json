{
  "name": "landing_tech-company",
  "version": "1.0.0",
  "description": "A responsive and modern landing page layout designed for a tech company. This project demonstrates the use of clean web design principles and front-end technologies such as BEM methodology, Flexbox, Grid, Sass, and CSS Animations & Transformations to create an engaging and adaptable user experience.",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint \"src/**/*.{js,mjs}\"",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:html": "linthtml \"**/*.html\""
  },
  "devDependencies": {
    "@linthtml/linthtml": "^0.9.6",
    "@parcel/transformer-sass": "^2.16.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "parcel": "^2.12.0",
    "prettier": "^3.3.2",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.4.1"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "keywords": [
    "landing-page",
    "frontend",
    "parcel",
    "scss",
    "bem",
    "responsive"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NadiiaBulmak/landing_tech-company.git"
  },
  "author": "Nadiia Bulmak",
  "bugs": {
